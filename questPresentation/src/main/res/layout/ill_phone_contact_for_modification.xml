<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PhoneContact.Modification.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        style="@style/PhoneContact.Modification.ContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            style="@style/PhoneContact.Modification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_action" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_information"
            style="@style/PhoneContact.Modification.Information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_title"
            android:layout_toLeftOf="@+id/btn_action"
            android:layout_toStartOf="@+id/btn_action" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_action"
            style="@style/PhoneContact.Modification.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>