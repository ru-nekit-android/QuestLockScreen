<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SetupWizard.ContentContainer"
    tools:context="ru.nekit.android.qls.setupWizard.view.QTPComplexityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_description"
        android:gravity="center"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/complexity_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/complexity_easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/complexity_easy_title" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/complexity_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/complexity_normal_title" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/complexity_hard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/complexity_hard_title" />
        </RadioGroup>

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_description"
        style="@style/SetupWizard.Description"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/text_qtp_complexity" />

</RelativeLayout>