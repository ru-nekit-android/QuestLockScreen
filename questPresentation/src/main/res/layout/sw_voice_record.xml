<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SetupWizard.ContentContainer"
    tools:context="ru.nekit.android.qls.setupWizard.view.VoiceRecordFragment"
    tools:ignore="NestedWeights">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_title"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            style="@style/Title.Padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_setup_voice_message_for_right_answer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green_light">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/view_right_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/double_gap"
                app:srcCompat="@drawable/right_answer" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/btn_record_voice_for_right_answer"
                    android:layout_centerHorizontal="true" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btn_record_voice_for_right_answer"
                    style="@style/RecordVoiceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_record_voice_for_right_answer"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            style="@style/Title.Padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_setup_voice_message_for_wrong_answer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red_light">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/view_wrong_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/double_gap"
                app:srcCompat="@drawable/wrong_answer" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/btn_record_voice_for_wrong_answer"
                    android:layout_centerHorizontal="true" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btn_record_voice_for_wrong_answer"
                    style="@style/RecordVoiceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_record_voice_for_wrong_answer"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>