    <style name="SetupWizard" />

    <style name="SetupWizard.Title" parent="Title.Padding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="SetupWizard.Description" parent="Text.Padding">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SetupWizard.ContentContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SetupWizard.PupilNameAndSex" />

    <style name="SetupWizard.PupilNameAndSex.Container">
        <item name="android:layout_margin">@dimen/normal_gap</item>
    </style>

    <style name="ToolContainer">
        <item name="android:background">@color/green</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="ToolButtonContainer" />

    <style name="ToolContainer.Button" parent="Button.Green">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShowNoMore" parent="ToolContainer.Button">
        <item name="buttonTint">@color/white</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginLeft">@dimen/normal_gap</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="Button.White">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Button.Green">
        <item name="backgroundTint">@color/green_dark</item>
    </style>

    <style name="NextButton" parent="ToolContainer.Button">
        <item name="android:gravity">center</item>
        <!--<item name="android:drawableRight">@drawable/ic_chevron_right_white_24dp</item>-->
    </style>

    <style name="AltButton" parent="ToolContainer.Button">
        <item name="android:gravity">center</item>
    </style>

    <style name="Window">
        <item name="backgroundColorStart">@color/lock_screen_background_color</item>
        <item name="backgroundColorEnd">#AAFFFFFF</item>
        <item name="dimAmount">0</item>
        <item name="animationDuration">400</item>
    </style>

