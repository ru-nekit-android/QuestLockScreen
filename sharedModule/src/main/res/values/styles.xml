<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance">
        <item name="fontFamily">roboto</item>
        <item name="textWeight">light</item>
        <item name="textStyle">italic</item>
    </style>

    <!--Setup Wizard-->

    <style name="SetupWizard" />

    <style name="SetupWizard.Title" parent="TextAppearance">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/base_semi_gap</item>
        <item name="android:paddingTop">@dimen/base_semi_gap</item>
        <item name="android:paddingLeft">@dimen/base_gap</item>
        <item name="android:paddingRight">@dimen/base_gap</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="SetupWizard.Title.Invert">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SetupWizard.ContentContainer" />

    <style name="SetupWizard.PupilName">
        <item name="android:padding">@dimen/base_semi_gap</item>
    </style>

    <style name="SetupWizard.PupilSex">
        <item name="android:padding">@dimen/base_semi_gap</item>
    </style>

    <style name="SetupWizard.QTPComplexity">
    </style>

    <style name="ToolContainer">
        <item name="android:background">@color/green</item>
    </style>

    <style name="ToolButtonContainer" />

    <style name="ToolContainer.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">roboto</item>
        <item name="textWeight">light</item>
        <item name="textStyle">normal</item>
    </style>

    <style name="ShowNoMore" parent="ToolContainer.Button">
        <item name="buttonTint">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/base_semi_gap</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">#ffd6d7d7</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">roboto</item>
        <item name="textWeight">light</item>
        <item name="textStyle">italic</item>
    </style>

    <style name="Button.Red">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">roboto</item>
        <item name="textWeight">light</item>
        <item name="textStyle">italic</item>
    </style>

    <style name="NextButton" parent="ToolContainer.Button">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_chevron_right_white_24dp</item>
    </style>

    <style name="AltButton" parent="ToolContainer.Button">
        <item name="android:gravity">left|center_vertical</item>
    </style>

</resources>